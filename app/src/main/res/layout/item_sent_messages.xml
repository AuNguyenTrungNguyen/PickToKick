<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <!--Content Message-->
    <TextView
        android:id="@+id/text_sent_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_rectangle_green"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:text="hello, hello!"
        android:textColor="#ffffff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_sent_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_sent_message_body"
        android:layout_toStartOf="@+id/text_sent_message_body"
        android:text="11:40"
        android:textColor="#a11313"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/text_sent_message_body"
        app:layout_constraintRight_toLeftOf="@+id/text_sent_message_body" />

</RelativeLayout>